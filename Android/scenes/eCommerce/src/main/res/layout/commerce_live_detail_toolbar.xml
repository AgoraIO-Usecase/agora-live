<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_vertical"
    tools:background="@color/grey_5B">

    <FrameLayout
        android:id="@+id/layoutChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvChat"
            android:layout_width="134dp"
            android:layout_height="38dp"
            android:textColor="@color/white_80_percent"
            android:textSize="12sp"
            android:text="@string/commerce_live_bottom_chat"
            android:gravity="center"
            android:background="@drawable/commerce_live_detail_bottom_chat_bg"/>
    </FrameLayout>


    <HorizontalScrollView
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginStart="5dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivShop"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@drawable/commerce_live_bottom_ic_shop"
                android:padding="8dp"
                android:layout_marginStart="5dp"
                android:scaleType="fitXY"
                android:background="@drawable/commerce_live_detail_bottom_btn_bg" />

            <ImageView
                android:id="@+id/ivSetting"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@drawable/commerce_live_bottom_ic_setting"
                android:padding="8dp"
                tools:visibility="visible"
                android:layout_marginStart="5dp"
                android:scaleType="fitXY"
                android:layout_marginEnd="15dp"
                android:background="@drawable/commerce_live_detail_bottom_btn_bg" />


        </LinearLayout>


    </HorizontalScrollView>

</LinearLayout>

