<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:fitsSystemWindows="false"
    android:orientation="vertical"
    android:background="#66000000"
    >

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvCancel"
        android:layout_width="359dp"
        android:layout_height="61dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/commerce_corner_radius14_white"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#007AFF"
        android:text="@string/commerce_setting_cancel"
        android:textSize="17sp"
        />

    <View
        android:id="@+id/vBgContent"
        android:layout_width="359dp"
        android:layout_height="103dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/commerce_corner_radius14_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tvCancel"
        android:alpha="0.7"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvMessage"
        android:layout_width="359dp"
        android:layout_height="wrap_content"
        android:padding="12dp"
        app:layout_constraintStart_toStartOf="@+id/vBgContent"
        app:layout_constraintEnd_toEndOf="@+id/vBgContent"
        app:layout_constraintTop_toTopOf="@+id/vBgContent"
        android:gravity="center"
        android:textColor="#993C3C43"
        android:textSize="13sp"
        android:lines="1"
        android:ellipsize="end"
        tools:text="Windy: Oh, absolutely, darling! Let's start with some food related words, shall we?"
        />

    <View
        android:id="@+id/vLine"
        android:layout_width="359dp"
        android:layout_height="0.5dp"
        app:layout_constraintTop_toBottomOf="@+id/tvMessage"
        app:layout_constraintStart_toStartOf="@+id/vBgContent"
        app:layout_constraintEnd_toEndOf="@+id/vBgContent"
        android:background="#5C3C3C43"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvReport"
        android:layout_width="359dp"
        android:layout_height="61dp"
        app:layout_constraintStart_toStartOf="@+id/vBgContent"
        app:layout_constraintEnd_toEndOf="@+id/vBgContent"
        app:layout_constraintBottom_toBottomOf="@+id/vBgContent"
        android:gravity="center"
        android:textColor="#007AFF"
        android:text="@string/commerce_setting_report"
        android:textSize="17sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>