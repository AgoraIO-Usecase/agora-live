<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="dream_flow_roundStyle_6">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">6%</item>
    </style>

    <style name="dream_flow_roundStyle_12">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12%</item>
    </style>

    <style name="dream_flow_roundStyle_50">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <style name="dream_flow_text_input_dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:backgroundDimAmount">0</item>
    </style>

    <style name="dream_flow_bottom_dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:backgroundDimAmount">0</item>
        <item name="enableEdgeToEdge">true</item>
    </style>

    <style name="dream_flow_bottom_full_dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:backgroundDimAmount">0</item>
        <item name="enableEdgeToEdge">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
<!--        <item name="behavior_fitToContents">false</item>-->
        <item name="behavior_peekHeight">0dp</item>
    </style>

    <style name="dream_flow_full_screen_dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:backgroundDimAmount">0</item>
        <item name="enableEdgeToEdge">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="dream_flow_toast_dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:backgroundDimAmount">0</item>
        <item name="enableEdgeToEdge">true</item>
    </style>

    <style name="dream_flow_alert_dialog" parent="Theme.AppCompat.Dialog">
        <item name="alertDialogStyle">@style/dream_flow_alert_dialog_style</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="enableEdgeToEdge">true</item>
    </style>

    <style name="dream_flow_alert_dialog_style" parent="AlertDialog.AppCompat">
        <item name="android:layout">@layout/dream_flow_alert_dialog_layout</item>
    </style>

    <style name="dream_flow_beauty_slider" parent="Widget.Material3.Tooltip">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">4dp</item>
        <item name="android:minWidth">28dp</item>
        <item name="android:minHeight">28dp</item>
        <item name="shapeAppearance">@null</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="dream_flow_setting_advance_slider" parent="Widget.Material3.Tooltip">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">4dp</item>
        <item name="android:minWidth">28dp</item>
        <item name="android:minHeight">28dp</item>
        <item name="shapeAppearance">@null</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="dream_flow_cornerNormalStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">3dp</item>
    </style>

</resources>