<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:theme="@style/Theme.AppCompat"
    android:paddingTop="@dimen/base_status_height"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_gravity="start|center_vertical"
            android:src="@drawable/commerce_setting_advance_ic_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:text="@string/dream_flow_setting_stylized_setting"/>

        <TextView
            android:id="@+id/tv_dream_flow_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:layout_marginEnd="@dimen/dream_flow_space_8dp"
            android:textSize="14sp"
            android:textColor="#7A59FB"
            android:layout_gravity="end|center_vertical"
            android:text="@string/dream_flow_setting_stylized_save"/>

    </FrameLayout>

    <ScrollView
        android:id="@+id/sv_stylized_settings"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:orientation="vertical">

            <include
                android:id="@+id/stylizedEffect"
                layout="@layout/dream_flow_setting_advance_item_switch"/>

            <include
                android:id="@+id/FaceMode"
                layout="@layout/dream_flow_setting_advance_item_switch"/>

            <include
                android:id="@+id/Strength"
                layout="@layout/dream_flow_setting_item_progress"/>

            <include
                android:id="@+id/Style"
                layout="@layout/dream_flow_settings_item_slider"/>

            <include
                android:id="@+id/Effect"
                layout="@layout/dream_flow_settings_item_slider"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardCornerRadius="12dp"
                android:backgroundTint="#F2F2F5"
                app:cardElevation="0dp">

                <EditText
                    android:id="@+id/et_dream_flow_describe"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginVertical="16dp"
                    android:textSize="12sp"
                    android:textColorHint="#979CBB"
                    android:hint="@string/dream_flow_setting_desc_hint"
                    android:gravity="start|top"
                    android:textColor="#303553"
                    android:imeOptions="actionDone"
                    android:inputType="textMultiLine"
                    android:lines="99"
                    android:background="@android:color/transparent" />
            </androidx.cardview.widget.CardView>

            <View
                android:id="@+id/v_dream_flow_setting_bottom"
                android:layout_width="match_parent"
                android:layout_height="40dp" />

        </LinearLayout>

    </ScrollView>
</LinearLayout>