<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:theme="@style/Theme.AppCompat"
    android:paddingTop="@dimen/base_status_height"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_gravity="start|center_vertical"
            android:src="@drawable/commerce_setting_advance_ic_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:text="@string/dream_flow_setting_stylized_setting"/>

        <TextView
            android:id="@+id/tv_dream_flow_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:layout_marginEnd="@dimen/dream_flow_space_8dp"
            android:textSize="14sp"
            android:textColor="#7A59FB"
            android:layout_gravity="end|center_vertical"
            android:text="@string/dream_flow_setting_stylized_save"/>

    </FrameLayout>

    <ScrollView
        android:id="@+id/sv_stylized_settings"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_height="wrap_content">

                <include
                    android:id="@+id/stylizedEffect"
                    android:paddingHorizontal="20dp"
                    layout="@layout/dream_flow_setting_advance_item_switch" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_height="wrap_content">

                <include
                    android:id="@+id/item_service"
                    android:paddingHorizontal="20dp"
                    layout="@layout/dream_flow_setting_advance_item_goto" />

                <View
                    android:id="@+id/v_server_mask"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_height="wrap_content">

                <include
                    android:id="@+id/Effect"
                    layout="@layout/dream_flow_settings_item_slider" />
            </FrameLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="#F2F4F7"
                app:cardElevation="0dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="16dp"
                    android:orientation="vertical">

                    <include
                        android:id="@+id/FaceMode"
                        layout="@layout/dream_flow_setting_advance_item_switch" />

                    <include
                        android:id="@+id/Strength"
                        layout="@layout/dream_flow_setting_item_progress" />

                    <include
                        android:id="@+id/superFrame"
                        layout="@layout/dream_flow_setting_item_progress" />

                    <include
                        android:id="@+id/Style"
                        layout="@layout/dream_flow_settings_item_slider" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="@string/dream_flow_setting_desc_hint"
                        android:textColor="#6D7291"
                        android:textSize="12sp"
                        />
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginBottom="24dp"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp">

                        <EditText
                            android:id="@+id/et_dream_flow_prompt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="12dp"
                            android:layout_marginVertical="16dp"
                            android:textSize="12sp"
                            android:textColorHint="#979CBB"
                            android:hint="@string/dream_flow_setting_desc_hint"
                            android:gravity="start|top"
                            android:textColor="#303553"
                            android:imeOptions="actionDone"
                            android:inputType="textMultiLine"
                            android:lines="99"
                            android:background="@android:color/transparent" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <View
                    android:id="@+id/v_custom_mask"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />

            </androidx.cardview.widget.CardView>

            <View
                android:id="@+id/v_dream_flow_setting_bottom"
                android:layout_width="match_parent"
                android:layout_height="40dp" />

        </LinearLayout>

    </ScrollView>
</LinearLayout>