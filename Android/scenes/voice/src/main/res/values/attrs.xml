<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="voice_RoomTitleBar">
        <attr name="voice_titleBarTitle" format="reference|string"/>
        <attr name="voice_titleBarLeftImage" format="reference"/>
        <attr name="voice_titleBarRightImage" format="reference"/>
        <attr name="voice_titleBarRightTitle" format="reference|string"/>
        <attr name="voice_titleBarArrowColor" format="reference|color"/>
        <attr name="voice_titleBarMenuResource" format="reference"/>
        <attr name="voice_titleBarDisplayHomeAsUpEnabled" format="boolean"/>
        <attr name="voice_titleBarRightVisible" format="boolean"/>
        <attr name="voice_titleBarTitlePosition" format="enum">
            <enum name="center" value="0"/>
            <enum name="left" value="1"/>
            <enum name="right" value="2"/>
        </attr>
        <attr name="voice_titleBarTitleTextSize" format="dimension"/>
        <attr name="voice_titleBarTitleTextColor" format="reference|color"/>
    </declare-styleable>

    <declare-styleable name="voice_SubtitleView">
        <attr name="voice_customScrollSpeed">
            <enum name="fast" value="9" />
            <enum name="medium" value="6" />
            <enum name="slow" value="3" />
        </attr>
        <attr name="voice_setSubtitleBgResource" format="reference"/>
    </declare-styleable>
</resources>