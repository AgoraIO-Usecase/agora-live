<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <size android:width="18dp" android:height="18dp" />
                    <solid android:color="@android:color/white" />
                    <stroke android:width="1dp" android:color="#D8D8D8" />
                    <corners android:radius="999dp" />
                </shape>
            </item>

            <item android:width="13dp" android:height="13dp" android:bottom="3dp" android:drawable="@drawable/app_welcome_cb_checked" android:end="3dp" android:gravity="center" android:start="3dp" android:top="3dp" />

        </layer-list>
    </item>

    <item>
        <shape android:shape="rectangle">
            <size android:width="18dp" android:height="18dp" />
            <solid android:color="@android:color/transparent" />
            <stroke android:width="1dp" android:color="#D8D8D8" />
            <corners android:radius="999dp" />
        </shape>
    </item>
</selector>