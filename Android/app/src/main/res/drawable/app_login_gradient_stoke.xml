<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 外层：渐变描边 -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:endColor="#42FFF9"
                android:startColor="#D092FF" />
            <corners android:radius="32dp" />
        </shape>
    </item>

    <!-- 内层：透明背景 -->
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#7B52F2" />
            <corners android:radius="30dp" />
        </shape>
    </item>
</layer-list>